<%# add navigation links to this file %>
<% if user_signed_in? %>
	<li class="dropdown">
	  <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name %><b class="caret"></b></a>
	  <ul class="dropdown-menu" style="padding-bottom: 0px;">
	    <li>
	      <%= link_to 'Edit Account', edit_user_registration_path %>
	    </li>
	    <% if current_user.has_role? :admin %>
	      <li>
	        <%= link_to 'User List', users_path %>
	      </li>
	    <% end %>
	    <li>
	      <%= link_to 'Logout', destroy_user_session_path, :method=>'delete', :id => 'log_out' %>
	    </li>
	  </ul>
	</li>
<% else %>
	<li>
	  <%= link_to 'Login', new_user_session_path %>
	</li>
	<li>
	  <%= link_to 'Sign up', new_user_registration_path %>
	</li>
<% end %>
