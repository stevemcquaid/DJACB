<h2>User info for: <%= @user.name %></h3>
<p>Name: <%= @user.name %></p>
<p>Email: <%= @user.email if @user.email %></p>

<h3>Recent Comments</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Comment</th>
      <th>Song:</th>
      <th>Posted On:</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= link_to comment.comment, comment_path(comment) %></td>
        <td><%= link_to comment.song.title, song_path(comment.song) %></td>
        <td><%= comment.date %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_comment_path(comment), :class => 'btn btn-mini' %>
          <% #link_to t('.destroy', :default => t("helpers.links.destroy")), comment_path(comment), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


